<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/detectPersonLay"
    android:layout_height="match_parent"
    tools:context=".Activities.DetectPersonActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationViewSplash"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/twentyfour"
        android:layout_marginTop="@dimen/twentyfour"
        android:layout_marginEnd="@dimen/twentyfour"
        android:layout_marginBottom="@dimen/twentyfour"
        android:background="@color/transparent"
        app:lottie_autoPlay="true"
        app:lottie_fileName="loading.json"
        app:lottie_loop="true" />


</RelativeLayout>